---
import Button from "@components/Atoms/Button";
import Spacer from "@components/Atoms/Spacer";
import Title from "@components/Atoms/Title";
const { title } = Astro.props;
---

<main>
  <header>
    <Title>{title}</Title>
  </header>
  <Spacer />
  <div class="content">
    <slot />
  </div>
  <Spacer size="lg" />
  <footer>
    <a href="/">
      <Button>戻る</Button>
    </a>
  </footer>
</main>

<style>
  .content {
    padding: 32px;
    background-color: #ebebeb;
    border-radius: 8px;
  }
</style>


